
<div class="margin-map">
  <div class="mapbox-style-show-my-bookclub">
    <div class="mapclass-show-my-bookclub">
      <div id="map"
         style="width: 100%;
         height: 800px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
       </div>
     </div>
  </div>

</div>

  <div class="card-for-map">
    <h1><%= @bookclub.name %></h1>
    <img src=" <%= @bookclub.image_url %>", alt="Book Club photos", style="width: 100%" />
    <div class="divider mt-2"></div>
    <div class="d-flex w-100 justify-content-between align-items-center mt-4">
      <h2 class='m-0'><%= @bookclub.genre %></h2>
      <p class='m-0'><%= @bookclub.location %></p>
    </div>
    <p class="mt-3"><%= @bookclub.description %></p>
    <p>Capacity: <%= "#{@bookclub.capacity}" %></p>
    <%= link_to "Confirm", bookclub_confirmation_path(@bookclub), class: 'btn-salmon choose-book-club'%>
    <%= link_to "Back to Book Clubs", bookclubs_path, class: 'thinging-2'%>
  </div>
</div>
  <div>
     <%= image_tag "logo.png", alt: "alttext", class: 'junto-logo' %>
  </div>






