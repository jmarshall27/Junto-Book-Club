<div class="banner-index">
  <div class="container">
    <div class="row banner-contents">
      <div class="col-lg-12 col-md-8 col-xs-4 align-items-center">
        <div id="header-container-bookclubs">
          <h1>Discover your next book club...</h1>
          <p>Click on a book club to learn more and join</p>
        </div>
      </div>
    </div>

    <div class="filter-bar">
      <h3>Filter</h3>
      <div class="dropdown">
        <button class="btn btn-filter dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= params[:filter].present? ? params[:filter] : 'Genre' %>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <%= link_to 'Fantasy', bookclubs_path(query: params[:query], filter: 'Fantasy'), class: "dropdown-item"  %>
          <%= link_to 'Feminist', bookclubs_path(query: params[:query], filter: 'Feminist'), class: "dropdown-item"  %>
          <%= link_to 'Non-fiction', bookclubs_path(query: params[:query], filter: 'Non-fiction'), class: "dropdown-item"  %>
          <%= link_to 'True Crime', bookclubs_path(query: params[:query], filter: 'True Crime'), class: "dropdown-item"  %>
          <%= link_to 'Thriller', bookclubs_path(query: params[:query], filter: 'Thriller'), class: "dropdown-item"  %>
          <%= link_to 'Classic', bookclubs_path(query: params[:query], filter: 'Classic'), class: "dropdown-item"  %>
          <%= link_to 'Any', bookclubs_path(query: params[:query], filter: 'Any'), class: "dropdown-item"  %>
          <%= link_to 'All', bookclubs_path(query: params[:query], filter: 'All'), class: "dropdown-item"  %>

        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="bookclub-cards">
    <% @bookclubs.each do |bookclub| %>
      <%= link_to(bookclub_path(bookclub), class: "card-links") do %>
        <div>

          <div class="card-trip">
            <img src=" <%= bookclub.image_url %>", alt="Book Club photos" />
            <div class="card-trip-infos">
              <div class="card-design">
                <div class="bookclub-name-postcode">
                  <h4><%= "#{bookclub.name}" %></h4>
                  <p><%= "#{bookclub.location}" %></p>
                </div>
                <div class="lil-book-genre">
                  <i class="fas fa-book-open"></i>

                  <p><%= "#{bookclub.genre}" %></p>
                </div>
                <p><%= "#{bookclub.description}" %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


