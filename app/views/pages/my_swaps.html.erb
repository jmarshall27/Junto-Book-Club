<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="swaps-requested">
        <h2>Pending Swaps</h2>
        <% @swaps.where(:status => 'pending').each do |swap| %>
          <h3><strong><%= swap.book_given.title %></strong></h3>
          <p><%= swap.book_given.year %></p>
          <p><%= swap.book_given.description %></p>
          <p><%="Swapping with: #{swap.giving_user.first_name.capitalize}"%></p>
          <p><%= "#{swap.giving_user.first_name.capitalize}'s Location: #{swap.giving_user.location}" %></p>
          <p><%= "Status: Waiting for #{swap.giving_user.first_name.capitalize} to " %></p>
        <% end %>
      </div>

      <div class="swaps-completed">
        <h2>Completed Swaps</h2>
        <% @swaps.where(:status => true).each do |swap| %>
          <h3><strong><%= swap.book_given.title %></strong></h3>
          <p><%= swap.book_given.year %></p>
          <p><%= swap.book_given.description %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
