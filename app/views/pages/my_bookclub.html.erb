<div class="margin-map-show">
  <div class="mapbox-style-show-my-bookclub-show">
    <div class="mapclass-show-my-bookclub-show">
      <div id="map"
         style="width: 100%;
         height: 800px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
       </div>
     </div>
  </div>

</div>
<div class="card-for-map-show">
  <h1><%= @bookclub.name %></h1>
  <img src="https://www.wendywutours.co.uk/blog/wp-content/uploads/2017/11/8booksheader-730x410.jpg" alt="" style="width: 100%;">
  <div class="divider-show mt-2"></div>
  <div class="d-flex w-100 justify-content-between align-items-center mt-4">
    <h2 class='m-0'><%= @bookclub.genre %></h2>
    <p class='m-0'><%= @bookclub.location %></p>
  </div>
  <p class="mt-3"><%= @bookclub.description %></p>
  <p class="mt-3">Capacity: <%= @bookclub.capacity %></p>
  <%= link_to "Change Bookclub", bookclubs_path, class: 'thinging-2-show'%>
</div>
</div>
