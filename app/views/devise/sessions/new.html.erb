
<div class="background-picture">
  <br>
  <br>



  <div class="margin-login-center">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="login-form-inputs">
        <h2 class="pb-2", style="text-align: center; color: #383838">Login</h2>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: false,
                    placeholder: "Email...",
                    input_html: { autocomplete: "email" }, class: 'input-login' %>
        <%= f.input :password,
                    required: false,
                    label: false,
                    placeholder: 'Password...',
                    input_html: { autocomplete: "current-password" }, class: 'input-login' %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= f.button :submit, "Log in", class: 'btn-salmon btn-block btn-login' %>
        <% end %>
        <%= link_to "Sign up", new_user_registration_path, class: "btn-salmon-outline btn-block" %>
       <%= link_to "Forgot your Password?",   new_user_password_path, class: "btn-block btn-salmon-outline btn-block" %>
      </div>
  </div>
</div>


