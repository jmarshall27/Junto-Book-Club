



<div class="login-page">
  <div class="row" style="margin-right: 60px; margin-left: 170px;">
    <div class="col-lg-5 login-h1-tag" style="margin-left: 20px;">
      <h1>Login now, </h1>
      <h1>To your Account...</h1>
    </div>
    <div class="col-lg-1"></div>
    <div class="col-lg-5">
      <div class="login-form-position">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="login-form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "login-button"%>
          </div>
        <% end %>
        <br>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
