



  <div class="row">
    <div class="col-lg-7">
      <%= render "book-3d" %>
    </div>
    <div class="co-lg-5">
      <div class="mapclass">
        <div style="margin-bottom: 40px;">
          <h2><%= @book.user.first_name %> <%= @book.user.last_name %> <%= cl_image_tag "#{@book.user.photo.key}", class: "avatarcard"%></h2>
         <div class="mapbox-style">
           <div id="map"
             style="width: 525px;
             height: 350px;"
             data-markers="<%= @markers.to_json %>"
             data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
           </div>
            <h3><%= @book.user.location %> </h3>
         </div>
        </div>
      </div>
    </div>
  </div>






  <div class="fixed-bottom-card">
    <%= simple_form_for [@book, Swap.new], html: { class: 'form-class' } do |f| %>
      <%= f.submit "Swap", class: "btn-dark-green" %>
    <% end %>
    <%= link_to "Find another book", books_path, class: "find-another" %>
  </div>





