
<div class="container" style="margin-top: 100px;">
  <%= @book.title %>
  <%= @book.author_name %>
  <%= @book.year %>
  <%= @book.genre %>
  <%= @book.description %>
  <% if @book.photo.attached? %>
    <%= image_tag @book.photo.service_url, alt: "alttext" %>
  <% end %>
  <%= link_to 'Confirm?', book_path(@book)  %>
  <%= link_to 'Reject?', book_path(@book), method: :delete, data: { confirm: 'are you sure' }  %>
</div>
