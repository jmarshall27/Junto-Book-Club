
<div class="container" style="margin-top: 100px;">
  <%= @book.title %>
  <%= author_cleaning(@book.author_name) %>
  <%= @book.year %>
  <%= @book.genre %>
  <%= @book.description %>
  <% if @book.photo.attached? %>
    <%= image_tag @book.photo.service_url, alt: "alttext" %>
  <% end %>
  <%= link_to 'Confirm?', book_path(@book), class: "btn-light-green"  %>
  <%= link_to 'Reject?', book_path(@book), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-light-green"  %>
</div>
